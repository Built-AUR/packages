# Maintainer: MedzikUser <nivua1fn@duck.com>
pkgname='built-mirrorlist'
pkgver=2022.5.17
pkgrel=1
pkgdesc='Built AUR mirrorlist to use with Pacman'
arch=('any')
url='https://built-aur.medzik.workers.dev'
license=('unknow')
backup=('etc/pacman.d/mirrorlist-medzikuser')
source=('mirrorlist'
        'mirrorlist-x86-64-v4')
sha256sums=('d4064591939c82691f50ce2cc845c0094d0fa3fc1b5548429bb2992a972a483d'
            '373aeea0df7b33b8121a95b3f7712c856049c59854f88b886ebe2aa36a9ffb93')

package() {
  mkdir -p "${pkgdir}/etc/pacman.d"
  install -Dm 644 "${srcdir}/mirrorlist" "${pkgdir}/etc/pacman.d/built-mirrorlist"
  install -Dm 644 "${srcdir}/mirrorlist-x86-64-v4" "${pkgdir}/etc/pacman.d/built-mirrorlist-x86-64-v4"
}
